<%- include('partials/header'); -%>
<link rel="stylesheet" type="text/css" href="css/login.css">

<div class="alert alert-danger alert-dismissible" style="display:<%= display %>">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <strong>Error!</strong> Please Check your id or key!
  </div>

<div class="login">
    <form action="/login" method="POST">
        <div class="form-group">
        <label for="email">ENTER YOUR ID:</label>
        <input type="text" class="form-control" placeholder="Enter Here" id="email" name="logid" required>
        </div>
        <div class="form-group">
        <label for="pwd">ENTER YOUR KEY:</label>
        <input type="password" class="form-control" placeholder="Enter Here" id="pwd" name="pwd" required>
        </div>
        <button type="submit" class="btn btn-primary">Log In</button>
    </form>
</div>


  <%- include('partials/footer'); -%>